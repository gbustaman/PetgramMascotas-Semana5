<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPerfilMascota"
    android:layout_width="130dp"
    android:layout_height="150dp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCornerRadius="@dimen/corner_radius_cardview"
   >

    <LinearLayout
        android:id="@+id/llMascotaPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoMascotaPerfil"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mascota_19_2" />
        <LinearLayout
            android:id="@+id/glBase"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/tvPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="15sp"
                android:textColor="@color/textSecundary"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/text_margin_right"
                />

            <ImageButton
                android:id="@+id/btnLikePerfil"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/textIcons"
                android:scaleType="centerCrop"
                android:src="@drawable/hueso_dog_amarillo_50"

                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>